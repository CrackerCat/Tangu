#pragma once
#ifndef _NETMANAGE_IP
#define _NETMANAGE_IP

#include "_TanguBuild"

namespace Net
{
	class IPInfo
	{
	private:
		byte		_bIP[4];
		string		_sIP;

	public:
		void IPStringToHex(const char* IPString, byte* Buf);
		
	public:
		IPInfo();
		IPInfo(const byte* IPByte);
		IPInfo(const string& IPString);
		IPInfo(const IPInfo& IP);
		const IPInfo& operator=(const byte* IPByte);
		const IPInfo& operator=(const string& IPString);
		const IPInfo& operator=(const IPInfo& IP);

	public:
		byte* operator*(void);
		string uc_bstr(void);
		byte operator[](size_t Octet);
	};
}

#endif /* _NETMANAGE_IP */