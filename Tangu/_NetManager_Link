#pragma once
#ifndef _NETMANAGER_LINK
#define _NETMANAGER_LINK

#include "_TanguBuild"

namespace Net
{
	class MACInfo
	{
	private:
		byte		_bMAC[6];
		string		_sMAC;

	public:
		void MACStringToInt(const char* MACString, byte* Buf);

	public:
		MACInfo();
		MACInfo(const byte* MACByte);
		MACInfo(const string& MACString);
		MACInfo(const MACInfo& MAC);
		const MACInfo& operator=(const byte* MACByte);
		const MACInfo& operator=(const string& MACString);
		const MACInfo& operator=(const MACInfo& MAC);
		
	public:
		bool operator==(const MACInfo& MAC);
		byte* operator*(void);
		string uc_bstr(void);
		byte operator[](size_t Octet);
	};
}
